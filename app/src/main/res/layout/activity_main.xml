<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/background">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

</RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="30dp"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/btbsymbol"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#99000000"
        app:cardCornerRadius="30dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#DDA106">
                <Button
                    android:id="@+id/btn_myProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#DDA106"
                    android:text="Add your Product for Bid"
                    android:textSize="16sp"
                    android:textAllCaps="false"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#DDA106"
                >
                <Button
                    android:id="@+id/btn_auctionList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/btn_myProducts"
                    android:text="Current Auction List"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:backgroundTint="#DDA106"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#DDA106"
                >
                <Button
                    android:id="@+id/btn_winnerList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_auctionList"
                    android:layout_gravity="bottom"
                    android:text="Win Bids"
                    android:textAllCaps="false"
                    android:backgroundTint="#DDA106"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:backgroundTint="#DDA106"
                >
            <Button
                android:id="@+id/iv_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_auctionList"
                android:layout_gravity="bottom"
                android:text="Logout Your Account"
                android:textAllCaps="false"
                android:backgroundTint="#DDA106"
                android:textColor="@color/white"
                android:textSize="16sp"
                 />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>